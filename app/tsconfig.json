{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2021"
    ],
    "module": "CommonJS",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
